<Page
    x:Class="cnnc.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Black">

    <Page.Resources>
        <SolidColorBrush x:Key="FgWhite" Color="White"/>
        <SolidColorBrush x:Key="CardBlack" Color="#161616"/>
        <SolidColorBrush x:Key="BorderWhite" Color="Gray"/>
        <CornerRadius x:Key="CardRadius">18</CornerRadius>
        <CornerRadius x:Key="InputRadius">12</CornerRadius>
        <CornerRadius x:Key="ButtonRadius">22</CornerRadius>
    </Page.Resources>

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="36">
        <!-- Karte: Host/Port Inputs -->
        <Border
            Background="{StaticResource CardBlack}"
            BorderBrush="{StaticResource BorderWhite}"
            BorderThickness="1"
            CornerRadius="{StaticResource CardRadius}"
            Padding="28,22"
            Width="360">

            <StackPanel Spacing="16">
                <!-- Host Input -->
                <StackPanel>
                    <TextBlock Text="MACHINE NAME" Foreground="{StaticResource FgWhite}" Margin="8,0,0,2" FontSize="14"/>
                    <Border CornerRadius="{StaticResource InputRadius}" BorderBrush="{StaticResource BorderWhite}" BorderThickness="2">
                        <TextBox x:Name="MachineNameText"
                            FontSize="26"
                            Padding="10"
                            IsEnabled="False"
                            Foreground="{StaticResource FgWhite}"
                            Background="Transparent"
                            BorderThickness="0"/>
                    </Border>
                </StackPanel>

                <!-- Hinweis zur Portnummer -->
                <TextBlock
                    Text="The default port is 5000. For communication to work, both devices must use the same port and change their port numbers accordingly."
                    Foreground="{StaticResource FgWhite}"
                    Margin="8,0,0,8"
                    TextWrapping="Wrap"
                    FontSize="13"/>

                <!-- Port Input -->
                <StackPanel>
                    <TextBlock Text="PORT" Foreground="{StaticResource FgWhite}" Margin="8,0,0,2" FontSize="14"/>
                    <Border CornerRadius="{StaticResource InputRadius}" BorderBrush="{StaticResource BorderWhite}" BorderThickness="2">
                        <TextBox x:Name="PortTextBox"
         FontSize="26"
         Padding="10"
         Foreground="{StaticResource FgWhite}"
         Background="Transparent"
         BorderThickness="0"
         MaxLength="5"
         TextChanged="PortTextBox_TextChanged"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Karte: Autostart + Button -->
        <Border
            Background="{StaticResource CardBlack}"
            BorderBrush="{StaticResource BorderWhite}"
            BorderThickness="1"
            CornerRadius="{StaticResource CardRadius}"
            Padding="28,22"
            Width="360">
            <StackPanel Spacing="24">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                    <CheckBox x:Name="AutostartCheckbox"
                              MinWidth="30" MinHeight="30"
                              VerticalAlignment="Center"
                              Foreground="{StaticResource FgWhite}"/>
                    <TextBlock Text="Autostart" Foreground="{StaticResource FgWhite}" VerticalAlignment="Center" FontSize="18"/>
                </StackPanel>
                <Button
                    x:Name="RunButton"
                    Content="Start Service"
                    Foreground="Black"
                    Background="Green"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Height="60"
                    Padding="0"
                    CornerRadius="{StaticResource ButtonRadius}"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
